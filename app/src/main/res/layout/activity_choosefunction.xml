<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/function_content"
    android:layout_height="match_parent"
    android:background="#01000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/function_paint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/function_tv_paint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="随手涂鸦"
                android:textColor="#e000"
                android:textSize="18sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/function_fab_paint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/function_tv_paint"
                android:src="@drawable/ic_action_brush"
                app:backgroundTint="#e000" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/function_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/function_tv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="相册图片"
                android:textColor="#e000"
                android:textSize="18sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/function_fab_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/function_tv_photo"
                android:src="@drawable/ic_action_picture"
                app:backgroundTint="#e000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/function_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/function_tv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="拍        照"
                android:textColor="#e000"
                android:textSize="18sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/function_fab_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/function_tv_camera"
                android:src="@drawable/ic_action_camera"
                app:backgroundTint="#e000" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/function_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/function_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="文字笔记"
                android:textColor="#e000"
                android:textSize="18sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/function_fab_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/function_tv_text"
                android:src="@drawable/ic_action_tag"
                app:backgroundTint="#e000" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>